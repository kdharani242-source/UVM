`include "uvm_macros.svh";
import uvm_pkg::*;
module tb;
  initial
    begin
    int verb;
      uvm_top.set_report_verbosity_level(100);//uvm low
    verb=uvm_top.get_report_verbosity_level();
    `uvm_info("verbosity",$sformatf("default verbosity level=%0d",verb),UVM_LOW);
      uvm_top.set_report_verbosity_level(200);//uvm medium
    verb=uvm_top.get_report_verbosity_level();
    `uvm_info("verbosity",$sformatf("default verbosity level=%0d",verb),UVM_LOW);
      uvm_top.set_report_verbosity_level(UVM_HIGH);//uvm high
    verb=uvm_top.get_report_verbosity_level();
    `uvm_info("verbosity",$sformatf("default verbosity level=%0d",verb),UVM_LOW);
      uvm_top.set_report_verbosity_level(400);//uvm full
    verb=uvm_top.get_report_verbosity_level();
      `uvm_info("verbosity",$sformatf("default verbosity level=%0d",verb),UVM_LOW);
      uvm_top.set_report_verbosity_level(500);//uvm debug
    verb=uvm_top.get_report_verbosity_level();
    `uvm_info("verbosity",$sformatf("default verbosity level=%0d",verb),UVM_LOW);
  end
endmodule
//output
