# KERNEL: UVM_INFO /home/runner/testbench.sv(18) @ 0: reporter [verbosity] default verbosity level=300
# KERNEL: UVM_INFO /home/runner/testbench.sv(21) @ 0: reporter [verbosity] default verbosity level=400
# KERNEL: UVM_INFO /home/runner/testbench.sv(24) @ 0: reporter [verbosity] default verbosity level=500
